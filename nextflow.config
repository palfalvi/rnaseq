params {
	out = 'results'
	mode = 'salmon'
	transcriptome = false
	reads = false
	single = false
	fragment_length = 300
	fragment_sd = 1
	genome = false
	gtf = false
	skip_qc = false
	sjdbGTFfeatureExon = 'exon'
	featureCounts_direction = 0
	save_index = false
	index = false
	skip_multiqc = false
	cpus = 20
	tracedir = "${params.out}/pipeline_info"
}

profiles {
    standard {
			process.executor = 'pbspro'
			process{
				withLabel: small {
					cpus = 20
					memory = '10GB'
					queue = 'small'
				}
				withLabel: medium {
					cpus = 20
					memory = '10GB'
					queue = 'medium'
				}
				withLabel: large {
					cpus = 20
					memory = '10GB'
					queue = 'large'
				}
				withLabel: smps {
					cpus = 20
					memory = '10GB'
					queue = 'smps'
				}
				withLabel: smpm {
					cpus = 20
					memory = '10GB'
					queue = 'smpm'
				}
				withLabel: smpl {
					cpus = 20
					memory = '10GB'
					queue = 'smpl'
				}
			}
    }

    local {
        process.executor = 'local'
        process.memory = '10GB'
    }

}

timeline {
  enabled = true
  file = "${params.tracedir}/timeline.html"
}
report {
  enabled = true
  file = "${params.tracedir}/report.html"
}
trace {
  enabled = true
  file = "${params.tracedir}/trace.txt"
}
dag {
  enabled = true
  file = "${params.tracedir}/dag.svg"
}


manifest {
  name = 'RNAseq'
  author = 'Gergo Palfalvi'
  homePage = 'https://github.com/palfalvi/rnaseq'
  description = 'RNA-seq mapping pipeline'
  mainScript = 'rnaseq.nf'
  nextflowVersion = '>=0.32.0'
  version = '1.0dev'
}
